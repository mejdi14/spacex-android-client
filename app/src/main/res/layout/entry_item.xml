<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_shape"
   android:layout_marginStart="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="19dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="10dp">
    <ImageView
        android:id="@+id/padge"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="12dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/round_colorful_shape"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/launch_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="28dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/amiri_bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/padge"
        android:layout_marginLeft="10dp" />
    <TextView
        android:id="@+id/mission_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="TextView"
        android:textSize="18dp"
        android:fontFamily="@font/amiri_bold"
        android:textColor="#202020"
        app:layout_constraintTop_toBottomOf="@id/launch_name"
        app:layout_constraintStart_toStartOf="@id/launch_name"
        android:layout_marginLeft="10dp" />

    <TextView
        android:id="@+id/launch_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:fontFamily="@font/amiri_bold"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/mission_name"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="10dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>