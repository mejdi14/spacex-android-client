<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout
    android:id="@+id/motion"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_backgroun_color"
    app:layoutDescription="@xml/moon_scene"
    tools:context=".ui.activity.SplashScreen">

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="S\nP\nA\nC\nE\nX"
        android:textColor="#FFFFFF"
        android:textSize="60dp"
        android:gravity="center"
        android:visibility="gone"
        android:fontFamily="@font/space_font"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/mars"
        />


    <ImageView
        android:id="@+id/triangle2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/rectangle_green_shape"
        android:layout_marginBottom="30dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/mars"
        app:layout_constraintStart_toStartOf="@id/mars"
        app:layout_constraintEnd_toEndOf="@id/mars"
        app:layout_constraintBottom_toBottomOf="@id/mars"/>
    <ImageView
        android:id="@+id/triangle1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/rectangle_blue_shape"
        android:layout_marginBottom="30dp"
        app:layout_constraintTop_toTopOf="@id/mars"
        app:layout_constraintStart_toStartOf="@id/mars"
        app:layout_constraintEnd_toEndOf="@id/mars"
        app:layout_constraintBottom_toBottomOf="@id/mars"/>

    <ImageView
        android:id="@+id/triangle"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/rectangle_shape"
        android:layout_marginBottom="30dp"
        app:layout_constraintTop_toTopOf="@id/mars"
        app:layout_constraintStart_toStartOf="@id/mars"
        app:layout_constraintEnd_toEndOf="@id/mars"
        app:layout_constraintBottom_toBottomOf="@id/mars"/>

    <TextView
        android:id="@+id/welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hello there, "
        android:textSize="30dp"
        android:layout_marginTop="35dp"
        android:textColor="@color/black"
        android:gravity="center"
        android:fontFamily="@font/amiri_bold"
        app:layout_constraintTop_toBottomOf="@id/mars"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/cowboy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="space cowboy"
        android:layout_marginTop="35dp"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="30dp"
        android:fontFamily="@font/amiri_bold"
        app:layout_constraintTop_toBottomOf="@id/welcome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
   <ImageView
       android:id="@+id/mars"
       android:layout_width="500dp"
       android:layout_height="500dp"
       android:transitionName="transition_image"
       android:src="@drawable/round_shape"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       android:translationY="60dp"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintTop_toBottomOf="parent"/>
</androidx.constraintlayout.motion.widget.MotionLayout>
